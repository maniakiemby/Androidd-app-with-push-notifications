<MenuActionPrevious>:
    background_color: (97/255, 97/255, 107/255, 1)
    app_icon: 'data/cancel-male.png'
    on_release:
        root.close_app()

<MenuActionBar>:
    pos_hint: {'x': 1, 'top': 1}
    size_hint: (1, .1)


<DatePicker>:
    rows: 3
    background_normal: ''
    # background_color: utils.get_color_from_hex('')

<CalendarLayoutWidget>:
    cols: 7
    rows: 7
    padding: 40
    spacing: 10


<TimePicker>:
    rows: 3
    background_normal: ''
    padding: 25
    spacing: 15

<ValidMessage>:
    size_hint: (.9, .5)
    auto_dismiss: True

    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: 30
        spacing: 80

        Label:
            id: message_content
            font_size: sp(18)
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]

        BoxLayout:
            id: choice_layout
            orientation: 'horizontal'
            padding: 15
            spacing: 20

<ButtonWindowErrorMessageYes>:
    text: 'Tak'
    font_size: sp(22)
    background_color: (255/255, 102/255, 102/255, 1)

<ButtonWindowErrorMessageNo>:
    text: 'Anuluj'
    font_size: sp(22)
    background_color: (153/255, 255/255, 153/255, 1)

<ConfirmationButtonWindowErrorMessage>:
    text: 'ok'
    font_size: sp(22)
    size_hint: (.1, None)

<TasksPageScrollView>:
    background_normal: ''
    size_hint: (1, .8)
    pos_hint: {'y': .1}
    # center_x: .5
    do_scroll_x: False
    do_scroll_y: True

<TaskBoard>:
    cols: 2
    background_color: ''
    spacing: 4
    size_hint_y: None
    # padding: (5, 0)


<ButtonNewItem>:
    pos_hint: {'x': .7, 'top': .09}
    size_hint: (.15, .08)
    background_color: (0, 0, 0, 0)
    background_normal: ''

    Image:
        id: new_task_image
        source: 'data/add.png'
        center_x: self.parent.center_x - .2
        center_y: self.parent.center_y
        size_hint_x: .3
        allow_stretch: True

<WrapButton>:
    text_size: self.width - 15, None
    height: self.texture_size[1]

<ExecuteButtonTasksView>:
    background_normal: ''
    size_hint: (.15, .2)
    padding: (0, 50)
    Image:
        id: confirm_image
        source: 'data/check-circle-100.png'
        center_x: self.parent.center_x - .2
        center_y: self.parent.center_y
        size_hint_x: .3
        allow_stretch: True

<TaskButtonTasksView>:
    background_normal: ''
    font_size: 75
    color: 'grey'
    size_hint: (1, None)
    padding: (10, 50)

<AddTaskPage>:
    background_color: (0,0,0,.4)
    GridLayout:
        id: layout
        cols: 1
        rows: 1
        pos_hint: {'x': 0, 'y': .3}
        size_hint: (1, .7)


<CancelContentChangesButton>:
    Image:
        id: cancel_image
        source: 'data/cancel.png'
        center_x: self.parent.center_x - .2
        center_y: self.parent.center_y
        size_hint_x: .3
        allow_stretch: True

