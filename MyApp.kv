<InteriorView>:
    FloatLayout:
        ButtonBack:
            id: button_back

        ButtonConfirm:
            id: button_confirm

<TaskLayout>:
    GridLayout:
        rows: 3
        size_hint: .8, .42
        pos_hint: {"x": .1, "top": 1}

        GridLayout:  # był FloatLayout
            cols: 2
            size_hint: (.18, .4)

            Button:
                id: change_background_color
                background_color: (0,0,0,0)
                size_hint: .15, .8
                pos_hint: {"x": .62, "top": .9}

                Image:
                    id: 'change_background_color'
                    source: 'data/background-color-256.png'
                    center_x: self.parent.center_x - .2
                    center_y: self.parent.center_y
                    # size_hint_x: .3
                    allow_stretch: True

            Button:
                id: change_font_color
                background_color: (0,0,0,0)
                size_hint: .15, .8
                pos_hint: {"x": .85, "top": .9}

                Image:
                    id: 'change_background_color'
                    source: 'data/font-color-256.png'
                    center_x: self.parent.center_x - .2
                    center_y: self.parent.center_y
                    # size_hint_x: .3
                    allow_stretch: True

        ContentInput:
            id: content_input
            focus: True
            background_color: (230/255,230/255,230/255,.2)
            color: 'black'
            text_size: root.width * .7, root.height * .2
            size_hint: (.3, .6)
            pos_hint: {'x': .1}
            hint_text: '00:00 1sty | 1sty 1:08'

        GridLayout:
            cols: 2
            pos_hint: {"x": 0, "top": .12}
            size_hint: 1, .12
            spacing: 2

            Button:
                id: task_date
                text: 'Dodaj datę'
                background_normal: ''
                color: 'grey'
                pos_hint: {"x": 0.2, "top": 1}
                size_hint: 0.8, 0.2

            Button:
                id: task_time
                text: 'Dodaj czas'
                background_normal: ''
                color: 'grey'
                pos_hint: {"x": 0.2, "top": 1}
                size_hint: 0.8, 0.2

    Button: #ButtonBack:
        id: button_back

    Button: #ButtonConfirm:
        id: button_confirm

