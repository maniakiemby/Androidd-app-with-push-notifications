<MenuActionPrevious>:
    background_color: (97/255, 97/255, 107/255, 1)
    app_icon: 'data/cancel-male.png'
    on_release:
        root.close_app()

<MenuActionBar>:
    pos_hint: {'x': 1, 'top': 1}
    size_hint: (1, .1)


<DatePicker>:
    rows: 3
    background_normal: ''
