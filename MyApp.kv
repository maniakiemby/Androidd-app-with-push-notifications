<MainWindow>:
    task_content: task_content
    task_date_of_performance: task_date
    task_time_of_performance: task_time

    GridLayout:
        rows: 3

        FloatLayout:
            size_hint: (.18, .2)

            Button:
                background_color: (0,0,0,0)
                size_hint: .18, .7
                pos_hint: {"x": 0, "top": 1}
                on_release:
                    root.button_back()
                Image:
                    id: button_back_image
                    source: 'data/done.png'
                    center_x: self.parent.center_x - .2
                    center_y: self.parent.center_y
                    size_hint_x: .3
                    allow_stretch: True

        FloatLayout:
            pos_hint: {"x": 0, "top": 1}

            Button:
                # text: 'V'
                # id: execute_task
                background_color: (0,0,0,0)
                size_hint: (.2, .2)
                pos_hint: {"x": .01, "top": .8}
                on_release:
                    root.execute()
                Image:
                    id: execute_image
                    source: 'data/check-circle-150.png'
                    center_x: self.parent.center_x - .2
                    center_y: self.parent.center_y
                    size_hint_x: .3
                    allow_stretch: True

            TextInput:
                background_color: (0,0,0,.1)
                id: task_content
                # background_normal: ''
                color: 'black'
                text_size: root.width * .7, root.height * .2
                # size: self.texture_size
                size_hint: (.78, .4)
                pos_hint: {'x': .21, 'top': .9}


        GridLayout:
            cols: 2
            pos_hint: {"x": 0, "top": .12}
            size_hint: 1, .12
            spacing: 2

            Button:
                id: task_date
                background_normal: ''
                color: 'grey'
                pos_hint:{"x": 0.2, "top": 1}
                size_hint:0.8, 0.2
                on_release:
                    root.change_date_of_performance()

            Button:
                id: task_time
                background_normal: ''
                color: 'grey'
                pos_hint:{"x": 0.2, "top": 1}
                size_hint:0.8, 0.2
                on_release:
                    root.change_time_of_performance()

            #Button:
             #   text: 'Edytuj zadanie'
